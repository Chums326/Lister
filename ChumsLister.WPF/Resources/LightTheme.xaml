        </Setter>
    </Style>

    <Style x:Key="ThemeAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="Background" Value="#FF5722" />
        <Setter Property="Foreground" Value="White" />
