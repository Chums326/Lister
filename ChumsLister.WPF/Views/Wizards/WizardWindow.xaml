<Window x:Class="ChumsLister.WPF.Views.Wizards.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create eBay Listing"
        Height="925" Width="980"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Grid>
        <!-- Define three rows: Header (Auto), Content (*), Footer (Auto) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ========== HEADER: Page Title + Progress ========== -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="20"
                    VerticalAlignment="Center">
            <!-- Current page title -->
            <TextBlock x:Name="txtPageTitle"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black" />

            <!-- Spacer -->
            <TextBlock Width="20" />

            <!-- "Step X of Y" text -->
            <TextBlock x:Name="lblProgressText"
                       FontSize="14"
                       Foreground="Gray"
                       VerticalAlignment="Bottom" />

            <!-- Spacer -->
            <TextBlock Width="20" />

            <!-- ProgressBar showing which step we’re on -->
            <ProgressBar x:Name="progressIndicator"
                         Width="150"
                         Height="20"
                         Minimum="0"
                         Maximum="10"
                         Value="0" />
        </StackPanel>

        <!-- ========== CONTENT: host each IWizardPage in a Frame ========== -->
        <Frame x:Name="contentFrame"
               Grid.Row="1"
               Margin="20"
               Background="White" />

        <!-- ========== FOOTER: Back, Next/Create, Cancel buttons ========== -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20">
            <!-- Back button (default WPF style) -->
            <Button x:Name="btnBack"
                    Content="Back"
                    Width="75"
                    Margin="0,0,10,0"
                    Click="btnBack_Click" />

            <!-- Next (or "Create Listing" on last step) -->
            <Button x:Name="btnNext"
                    Content="Next"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="btnNext_Click" />

            <!-- Cancel wizard -->
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="75"
                    Click="btnCancel_Click" />
        </StackPanel>

        <!-- ========== OVERLAY: Shown while “FinishWizard” is executing ========== -->
        <Grid x:Name="loadingPanel"
              Grid.RowSpan="3"
              Background="#AAFFFFFF"
              Visibility="Collapsed">
            <TextBlock Text="Processing..."
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
