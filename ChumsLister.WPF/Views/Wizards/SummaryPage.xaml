<Page x:Class="ChumsLister.WPF.Views.Wizards.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ChumsLister.WPF.Views.Wizards"
      mc:Ignorable="d"
      Title="SummaryPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" >

            <!-- Header -->
            <TextBlock Text="Listing Summary"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,15" />

            <!-- Basic Information Grid -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Brand -->
                    <RowDefinition Height="Auto"/>
                    <!-- Model Number -->
                    <RowDefinition Height="Auto"/>
                    <!-- Condition -->
                    <RowDefinition Height="Auto"/>
                    <!-- Category -->
                    <RowDefinition Height="Auto"/>
                    <!-- Price -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Title:"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryTitle"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="5"/>

                <!-- Brand -->
                <TextBlock Text="Brand:"
                           Grid.Row="1"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryBrand"
                           Grid.Row="1"
                           Grid.Column="1"
                           Margin="5"/>

                <!-- Model Number -->
                <TextBlock Text="Model Number:"
                           Grid.Row="2"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryModelNumber"
                           Grid.Row="2"
                           Grid.Column="1"
                           Margin="5"/>

                <!-- Condition -->
                <TextBlock Text="Condition:"
                           Grid.Row="3"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryCondition"
                           Grid.Row="3"
                           Grid.Column="1"
                           Margin="5"/>

                <!-- Category -->
                <TextBlock Text="Category:"
                           Grid.Row="4"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryCategory"
                           Grid.Row="4"
                           Grid.Column="1"
                           Margin="5"/>

                <!-- Price -->
                <TextBlock Text="Start Price:"
                           Grid.Row="5"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBlock x:Name="txtSummaryPrice"
                           Grid.Row="5"
                           Grid.Column="1"
                           Margin="5"/>
            </Grid>

            <!-- Item Specifics -->
            <TextBlock Text="Item Specifics:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ListView x:Name="listItemSpecifics"
                      Height="120"
                      Margin="0,0,0,15">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name"
                                        DisplayMemberBinding="{Binding Key}"
                                        Width="150"/>
                        <GridViewColumn Header="Value"
                                        DisplayMemberBinding="{Binding Value}"
                                        Width="300"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Marketplace Selection -->
            <TextBlock Text="Marketplace(s):"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ListBox x:Name="listMarketplaces"
                     Height="50"
                     Margin="0,0,0,15"/>

            <!-- Shipping Options -->
            <TextBlock Text="Shipping Options:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="txtSummaryShipping"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <!-- Return Policy -->
            <TextBlock Text="Return Policy:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="txtSummaryReturnPolicy"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <!-- Images -->
            <TextBlock Text="Images:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="txtImageCount"
                       FontStyle="Italic"
                       Margin="0,0,0,5"/>
            <ListBox x:Name="listImages"
                     Height="100"
                     Margin="0,0,0,20"/>

        </StackPanel>
    </ScrollViewer>
</Page>
